// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model ProcessedImage {
  id            String   @id
  fileName      String   @map("file_name")
  driveFileId   String   @unique @map("drive_file_id")
  processedAt   DateTime @map("processed_at")
  movedToSaved  Boolean  @default(false) @map("moved_to_saved")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  posts         Post[]

  @@map("processed_images")
}

model Post {
  id                String   @id
  processedImageId  String   @map("processed_image_id")
  content           String
  ocrCachedAt       DateTime? @map("ocr_cached_at")
  platform          String   @default("x")
  characterCount    Int?     @map("character_count")
  createdAt         DateTime @default(now()) @map("created_at")

  processedImage    ProcessedImage @relation(fields: [processedImageId], references: [id])

  @@map("posts")
}
