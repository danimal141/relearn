{
  "name": "relearn",
  "version": "2.0.0",
  "description": "This system reminds us of our favorite screenshots in Google Drive every day",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "dev:watch": "tsx watch src/index.ts",
    "lint": "biome lint src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "type-check": "tsc --noEmit",
    "db:generate": "prisma generate",
    "db:create": "wrangler d1 create relearn-db",
    "db:migrate:dev": "wrangler d1 execute relearn-db --local --file=./prisma/migrations/init/migration.sql",
    "db:migrate:prod": "wrangler d1 execute relearn-db --file=./prisma/migrations/init/migration.sql",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:reset": "wrangler d1 execute relearn-db --local --command='DROP TABLE IF EXISTS processed_images;'",
    "db:seed": "tsx src/scripts/seed.ts",
    "db:test": "tsx src/scripts/test-db.ts"
  },
  "keywords": [
    "googledrive",
    "slack",
    "screenshot",
    "notification"
  ],
  "author": "danimal141",
  "license": "MIT",
  "dependencies": {
    "@prisma/adapter-d1": "^5.22.0",
    "@prisma/client": "^5.22.0",
    "@slack/webhook": "^7.0.3",
    "googleapis": "^144.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20241218.0",
    "@types/node": "^22.10.2",
    "prisma": "^5.22.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2",
    "wrangler": "^4.27.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
